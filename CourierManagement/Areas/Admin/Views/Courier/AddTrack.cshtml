@model AddTrackModel
@{
    ViewData["Title"] = "AddTrack";
}
<!-- Content Header (Page header) -->
<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1>Add A New Track</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="DashBoard">DashBoard</a></li>
                    <li class="breadcrumb-item active">Add Track</li>
                </ol>
            </div>
        </div>
    </div><!-- /.container-fluid -->
</section>

<section class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-12">
                <div class="card card-info">
                    <div class="card-header">
                        <h3 class="card-title">Add A New Track</h3>
                    </div>
                    <!-- /.card-header -->
                    <!-- form start -->
                    <form class="form-horizontal" method="post" asp-controller="Courier"
                          asp-action="AddTrack" asp-antiforgery="true">
                        <div asp-validation-summary="All" class="text-danger"></div>
                        <div class="card-body">
                            <div class="form-group row">
                                <label asp-for="Customer_id" class="col-sm-2 col-form-label">Customer Id</label>
                                <div class="col-sm-10">
                                    <input type="text" class="form-control" asp-for="Customer_id"
                                           id="Customer" placeholder="Customer id">
                                </div>
                            </div>
                            <div class="form-group row">
                                <label asp-for="Order_id" class="col-sm-2 col-form-label">Order id</label>
                                <div class="col-sm-10">
                                    <input type="text" asp-for="Order_id" class="form-control"
                                           id="order" placeholder="Order Id">
                                </div>
                            </div>
                            <div class="form-group row">
                                <label asp-for="Status" class="col-sm-2 col-form-label">Status</label>
                                <div class="col-sm-10">
                                    <input type="text" asp-for="Status" class="form-control"
                                           id="status" placeholder="Status">
                                </div>
                            </div>


                        </div>
                        <!-- /.card-body -->
                        <div class="card-footer">
                            <button type="submit" class="btn btn-info">Add</button>
                            <a asp-action="DashBoard" asp-controller="Courier"
                               class="btn btn-default float-right">Cancel</a>
                        </div>
                        <!-- /.card-footer -->
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>



