    <div class="row py-2 px-lg-5">
        <div class="col-lg-6 text-center text-lg-left mb-2 mb-lg-0">
            <div class="d-inline-flex align-items-center text-white">
                <small><i class="fa fa-phone-alt mr-2"></i>+018 111 222 33</small>
                <small class="px-3">|</small>
                <small><i class="fa fa-envelope mr-2"></i>Door2Door@gmail.com</small>
            </div>
        </div>
        <div class="col-lg-6 text-center text-lg-right">
            <div class="d-inline-flex align-items-center">
                <a class="text-white px-2" href="">
                    <i class="fab fa-facebook-f"></i>
                </a>
                <a class="text-white px-2" href="">
                    <i class="fab fa-twitter"></i>
                </a>
                <a class="text-white px-2" href="">
                    <i class="fab fa-linkedin-in"></i>
                </a>
                <a class="text-white px-2" href="">
                    <i class="fab fa-instagram"></i>
                </a>
                <a class="text-white pl-2" href="">
                    <i class="fab fa-youtube"></i>
                </a>
            </div>
        </div>
    </div>
</div>
<!-- Topbar End -->
<!-- Navbar Start -->
<div class="container-fluid p-0">
    <nav class="navbar navbar-expand-lg bg-light navbar-light py-3 py-lg-0 px-lg-5">
        <a href="Index" class="navbar-brand ml-lg-3">
            <h1 class="m-0 display-5 text-uppercase text-primary"><i class="fa fa-truck mr-2"></i>Door2Door</h1>
        </a>
        <button type="button" class="navbar-toggler" data-toggle="collapse" data-target="#navbarCollapse">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse justify-content-between px-lg-3" id="navbarCollapse">
            <div class="navbar-nav m-auto py-0">
                <a href="Index" class="nav-item nav-link">Home</a>
                <a href="About" class="nav-item nav-link">About</a>
                <a href="Service" class="nav-item nav-link">Service</a>
                <a href="Price" class="nav-item nav-link active">Discount</a>
                <a href="Contact" class="nav-item nav-link">Contact</a>
                <div class="nav-item dropdown">
                    <a href="#" class="nav-link dropdown-toggle" data-toggle="dropdown">Account</a>
                    <div class="dropdown-menu rounded-0 m-0">
                        <a href="CustomerLogin" class="dropdown-item">User </a>
                        <a href="CourierLogin" class="dropdown-item">Courier</a>
                        <a href="Login" class="dropdown-item">Admin</a>
                    </div>
                </div>
            </div>
        </div>
    </nav>
</div>
<!-- Navbar End -->
<!-- Header Start -->
<div class="jumbotron jumbotron-fluid mb-5">
    <div class="container text-center py-5">
        <h1 class="text-white display-3">Discount</h1>
        <div class="d-inline-flex align-items-center text-white">
            <p class="m-0"><a class="text-white" href="">Home</a></p>
            <i class="fa fa-circle px-3"></i>
            <p class="m-0">Discount</p>
        </div>
    </div>
</div>
<!-- Header End -->
<!-- Pricing Plan Start -->
<div class="container-fluid pt-5">
    <div class="container">
        <div class="text-center pb-2">
            <h6 class="text-primary text-uppercase font-weight-bold">Discount Plan</h6>
            <h1 class="mb-4">Affordable Discount Packages</h1>
        </div>
        <div class="row">
            <div class="col-md-4 mb-5">
                <div class="bg-secondary">
                    <div class="text-center p-4">
                        <h1 class="display-4 mb-0">
                            <small class="align-top text-muted font-weight-medium" style="font-size: 22px; line-height: 45px;"></small>10<small class="align-bottom text-muted font-weight-medium" style="font-size: 45px; line-height: 40px;">%</small>
                        </h1>
                    </div>
                    <div class="bg-primary text-center p-4">
                        <h3 class="m-0">Bkash</h3>
                    </div>
                    <div class="d-flex flex-column align-items-center py-4">
                        <p>10% discount is available NOW!</p>
                        <p>15% discount is available for 1st January - 28th February</p>
                        
                        <a href="CustomerLogin" class="btn btn-primary py-2 px-4 my-2">Order Now</a>
                    </div>
                </div>
            </div>
            <div class="col-md-4 mb-5">
                <div class="bg-secondary">
                    <div class="text-center p-4">
                        <h1 class="display-4 mb-0">
                            <small class="align-top text-muted font-weight-medium" style="font-size: 22px; line-height: 45px;"></small>5<small class="align-bottom text-muted font-weight-medium" style="font-size: 45px; line-height: 40px;">%</small>
                        </h1>
                    </div>
                    <div class="bg-primary text-center p-4">
                        <h3 class="m-0">Nagad</h3>
                    </div>
                    <div class="d-flex flex-column align-items-center py-4">
                        <p>5% discount is available NOW!</p>
                        <p>13% discount is available for 1st January - 28th February</p>
                       
                        <a href="CustomerLogin" class="btn btn-primary py-2 px-4 my-2">Order Now</a>
                    </div>
                </div>
            </div>
            <div class="col-md-4 mb-5">
                <div class="bg-secondary">
                    <div class="text-center p-4">
                        <h1 class="display-4 mb-0">
                            <small class="align-top text-muted font-weight-medium" style="font-size: 22px; line-height: 45px;"></small>2<small class="align-bottom text-muted font-weight-medium" style="font-size: 45px; line-height: 40px;">%</small>
                        </h1>
                    </div>
                    <div class="bg-primary text-center p-4">
                        <h3 class="m-0">Distance(km)</h3>
                    </div>
                    <div class="d-flex flex-column align-items-center py-4">
                        <p>Discount available for air, ocean, land</p>
                        <p>2% discount is available for >500k.m. transportation</p>
                        
                        <a href="CustomerLogin" class="btn btn-primary py-2 px-4 my-2">Order Now</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Pricing Plan End -->

<div align="center">
    <div class="col-md-5">
        <!-- Form Element sizes -->
        <div class="card card-success">
            <div class="card-header">
                <h3 class="card-title">Total Cost</h3>
            </div>
            <div class="card-body">
                @using (Html.BeginForm("Discount", "Courier", FormMethod.Post, new { id = "submitForm" }))
                {
                <fieldset>
                    <h4>Total TK: </h4>@Html.EditorFor(x => x.Total)<br /><br />
                    <input class="btn btn-primary py-2 px-4 my-2" type="submit" value="Bkash" name="command" />
                    <input class="btn btn-primary py-2 px-4 my-2" type="submit" value="Nagad" name="command" />
                    <input class="btn btn-primary py-2 px-4 my-2" type="submit" value="Distance" name="command" /><br /><br />
                    @Html.Label("Total Discount is :BDT") @Html.DisplayFor(x => x.Cost)
                </fieldset>}
            </div>
            <!-- /.card-body -->
        </div>
        <!-- /.card -->

    </div>
</div>