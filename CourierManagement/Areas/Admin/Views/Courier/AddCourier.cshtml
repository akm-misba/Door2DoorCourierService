@model AddCourierModel
@{
    Layout = "~/Areas/Admin/Views/Shared/_layout.cshtml";
}
<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1>Add A New Courier</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="#">Home</a></li>
                    <li class="breadcrumb-item active">Add Courier</li>
                </ol>
            </div>
        </div>
    </div><!-- /.container-fluid -->
</section>

<div align="center">
    <div class="col-md-6">
        <!-- Form Element sizes -->
        <div class="card card-success">
            <div class="card-header">
                <h3 class="card-title">Sign Up for Courier</h3>
            </div>

            <form class="form-horizontal" method="post" asp-controller="Courier"
                  asp-action="AddCourier" asp-antiforgery="true">
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="card-body">
                    <div class="form-group row">
                        <label asp-for="Name" class="col-sm-2 col-form-label">Name</label>
                        <div class="col-sm-10">
                            <input type="text" class="form-control" asp-for="Name"
                                   id="order" placeholder="Full Name">
                        </div>
                    </div>
                    <div class="form-group row">
                        <label asp-for="Email" class="col-sm-2 col-form-label">Email</label>
                        <div class="col-sm-10">
                            <input type="text" asp-for="Email" class="form-control"
                                   id="courier" placeholder="Email">
                        </div>
                    </div>
                    <div class="form-group row">
                        <label asp-for="Password" class="col-sm-2 col-form-label">Password</label>
                        <div class="col-sm-10">
                            <input type="text" asp-for="Password" class="form-control"
                                   id="Password" placeholder="Password">
                        </div>
                    </div>

                    <div class="card-footer">
                        <button type="submit" class="btn btn-primary py-2 px-4 my-2 float-left">Add</button>
                        <a asp-action="CourierLogin" asp-controller="Courier"
                           class="btn btn-default float-right">Cancel</a>
                    </div>
                </div>
            </form>
            <!-- /.card-body -->
        </div>
        <!-- /.card -->

    </div>
</div>