@model EditPickupModel
@{
    ViewData["Title"] = "EditPickup";
}
<!-- Content Header (Page header) -->
<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1>Edit An Existing Pickup Details</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="DashBoard">DashBoard</a></li>
                    <li class="breadcrumb-item active">Add Pickup</li>
                </ol>
            </div>
        </div>
    </div><!-- /.container-fluid -->
</section>

<section class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-12">
                <div class="card card-info">
                    <div class="card-header">
                        <h3 class="card-title">Edit An Existing Pickup Details</h3>
                    </div>
                    <!-- /.card-header -->
                    <!-- form start -->
                    <form class="form-horizontal" method="post" asp-controller="Courier"
                          asp-action="EditPickup" asp-antiforgery="true">
                        <div asp-validation-summary="All" class="text-danger"></div>
                        <input type="hidden" asp-for="Id" />
                        <div class="card-body">
                            <div class="form-group row">
                                <label asp-for="Order_id" class="col-sm-2 col-form-label">Order Id</label>
                                <div class="col-sm-10">
                                    <input type="number" asp-for="Order_id" class="form-control"
                                           id="Order_id" placeholder="Order Id">
                                </div>
                            </div>
                            <div class="form-group row">
                                <label asp-for="Courier_id" class="col-sm-2 col-form-label">Courier Id</label>
                                <div class="col-sm-10">
                                    <input type="text" class="form-control" asp-for="Courier_id"
                                           id="Courier_id" placeholder="Courier Id">
                                </div>
                            </div>
                            <div class="form-group row">
                                <label asp-for="DateAndTime" class="col-sm-2 col-form-label">Date And Time</label>
                                <div class="col-sm-10">
                                    <input type="text" class="form-control" asp-for="DateAndTime"
                                           id="DateAndTime" placeholder="Date And Time">
                                </div>
                            </div>
                            

                        </div>
                        <!-- /.card-body -->
                        <div class="card-footer">
                            <button type="submit" class="btn btn-info">Edit</button>
                            <a asp-action="ManagePickup" asp-controller="Courier"
                               class="btn btn-default float-right">Back</a>
                        </div>
                        <!-- /.card-footer -->
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>



